{
  "app": {
    "layout": "left-menu",
    "keepAlive": true,
    "contentPadding": 8,
    "routeQueryMode": "normal",
    "routeQueryEnhancedMode": "base64",
    "transitionStatus": true,
    "transitionMode": "scope",
    "transitionName": "fade",
    "watermarkStatus": true,
    "watermarkMode": "scope",
    "watermarkContent": "walnut-admin",
    "lockStatus": true,
    "lockMode": "default",
    "lockIdleSeconds": 5,
    "hijackRefresh": false,
    "colorMode": "default",
    "reducedMotion": false
  },
  "themes": {
    "light": {
      "primaryColor": "#18a058",
      "infoColor": "#2080f0",
      "successColor": "#18a058",
      "warningColor": "#f0a020",
      "errorColor": "#d03050",
      "bodyColor": "#f8f8f8",
      "invertedColor": "#2C3E50"
    },
    "dark": {
      "primaryColor": "#63e2b7",
      "infoColor": "#70c0e8",
      "successColor": "#63e2b7",
      "warningColor": "#f2c97d",
      "errorColor": "#e88080",
      "bodyColor": "#202020",
      "invertedColor": "#2C3E50"
    }
  },
  "logo": {
    "id": "walnut-logo",
    "fixed": true,
    "status": true,
    "transition": "slide-left"
  },
  "header": {
    "id": "walnut-header",
    "fixed": true,
    "status": true,
    "inverted": true,
    "transition": "slide-up",
    "height": 48,
    "fullscreen": true,
    "search": true
  },
  "tabs": {
    "id": "walnut-tabs",
    "fixed": true,
    "status": true,
    "inverted": true,
    "transition": "slide-up",
    "height": 40,
    "itemWidth": 120,
    "showIcon": true,
    "showUtils": true,
    "utilsMode": "overflow",
    "contextMenu": true,
    "sortable": true,
    "styleMode": "card",
    "itemTransition": "fade-down",
    "persistent": true,
    "closeMode": "hover",
    "affixMode": "icon"
  },
  "breadcrumb": {
    "id": "walnut-breadcrumb",
    "status": true,
    "transition": "fade-down",
    "showIcon": true,
    "showDropdown": true,
    "separator": ">"
  },
  "menu": {
    "id": "walnut-menu",
    "status": true,
    "transition": "slide-left",
    "collapseStatus": true,
    "collapseMode": "bar",
    "width": 240,
    "collapsedWidth": 64,
    "accordion": false,
    "collapsedIconSize": 20,
    "iconSize": 24,
    "indent": 16,
    "inverted": true
  },
  "footer": {
    "id": "walnut-footer",
    "fixed": true,
    "status": true,
    "inverted": true,
    "transition": "slide-down",
    "height": 28,
    "content": "Copyright Â© 2020-present Walnut Admin. All Rights Reserved."
  }
}
