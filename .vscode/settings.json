{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "format/*",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-indent",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-spacing",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-spaces",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-order",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-dangle",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*-newline",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*quotes",
      "severity": "off",
      "fixable": true
    },
    {
      "rule": "*semi",
      "severity": "off",
      "fixable": true
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.quiet": true,
  "json.schemas": [
    {
      "fileMatch": [
        "src/settings.json"
      ],
      "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "$ref": "#/definitions/AppSettings",
        "definitions": {
          "AppSettings": {
            "type": "object",
            "properties": {
              "app": {
                "$ref": "#/definitions/AppSettingsForApp"
              },
              "themes": {
                "$ref": "#/definitions/AppSettingsForTheme"
              },
              "logo": {
                "$ref": "#/definitions/AppSettingsForLogo"
              },
              "header": {
                "$ref": "#/definitions/AppSettingsForHeader"
              },
              "tabs": {
                "$ref": "#/definitions/AppSettingsForTabs"
              },
              "breadcrumb": {
                "$ref": "#/definitions/AppSettingsForBreadcrumb"
              },
              "menu": {
                "$ref": "#/definitions/AppSettingsForMenu"
              },
              "footer": {
                "$ref": "#/definitions/AppSettingsForFooter"
              }
            },
            "required": [
              "app",
              "themes",
              "logo",
              "header",
              "tabs",
              "breadcrumb",
              "menu",
              "footer"
            ],
            "additionalProperties": false
          },
          "AppSettingsForApp": {
            "type": "object",
            "properties": {
              "layout": {
                "$ref": "#/definitions/ValueOfAppConstLayoutMode",
                "description": "DX config App Layout",
                "default": "left-menu"
              },
              "keepAlive": {
                "type": "boolean",
                "description": "DX config Keep Alive component, vue features",
                "default": true
              },
              "contentPadding": {
                "type": "number",
                "description": "DX config Content padding px",
                "default": 2
              },
              "routeQueryMode": {
                "$ref": "#/definitions/ValueOfAppConstRouteQueryMode",
                "description": "DX config Rotue Query Features 'normal' => no change to route query 'enhanced' => make route query unreadable",
                "default": "normal"
              },
              "routeQueryEnhancedMode": {
                "$ref": "#/definitions/ValueOfAppConstRouteQueryEnhancedMode",
                "description": "DX config Route Query Enhanced Mode Only works when `routeQueryMode` => 'enhanced' 'base64' => stringify and transform to base64 'cryptojs' => use `crypto-js` to encrypt/decrypt route query",
                "default": "base64"
              },
              "transitionStatus": {
                "type": "boolean",
                "description": "DX config Transition Component, vue features",
                "default": true
              },
              "transitionMode": {
                "$ref": "#/definitions/ValueOfAppConstBasicMode",
                "description": "DX config Transition Mode 'global' => use `transitionName` for transition name 'scope' => use the transition info in route `meta` object",
                "default": "scope"
              },
              "transitionName": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "DX config Global Transition Name Only works when `transitionMode` => 'global'",
                "default": "fade"
              },
              "watermarkStatus": {
                "type": "boolean",
                "description": "DX config Watermark features on use or not",
                "default": true
              },
              "watermarkMode": {
                "$ref": "#/definitions/ValueOfAppConstBasicMode",
                "description": "DX config Watermark Mode 'global' => use `watermarkContent` for watermark content 'scope' => use the watermark info in route `meta` object",
                "default": "scope"
              },
              "watermarkContent": {
                "type": "string",
                "description": "DX config Global Watermark Content Only works when `watermarkMode` => 'global'",
                "default": "walnut-admin"
              },
              "lockStatus": {
                "type": "boolean",
                "description": "DX config Lock Features on use or not",
                "default": true
              },
              "lockMode": {
                "$ref": "#/definitions/ValueOfAppConstLockMode",
                "description": "DX config Lock Mode 'default' => user can manually to lock tha application 'security' => more secure usage, app would lock when user's mouse leave the app or change the browser/system tabs 'idle' => app would auto lock when user is idle for some time",
                "default": "default"
              },
              "lockIdleSeconds": {
                "type": "number",
                "description": "DX config User inactive seconds to lock app",
                "default": 5
              },
              "hijackRefresh": {
                "type": "boolean",
                "description": "DX config use event listener to hijack the refresh action and use redirect to refresh the current route",
                "default": true
              },
              "colorMode": {
                "$ref": "#/definitions/ValueOfAppConstColorMode",
                "description": "UX config just different css tricks to fitler the app in view",
                "default": "default"
              },
              "reducedMotion": {
                "type": "boolean",
                "description": "UX config for those who cannot see animation viewing the internet",
                "default": false
              },
              "backToTopMode": {
                "$ref": "#/definitions/ValueOfAppConstBackToTopMode",
                "description": "DX config standalone or built in float setting buttons",
                "default": "builtin"
              }
            },
            "required": [
              "layout",
              "keepAlive",
              "contentPadding",
              "routeQueryMode",
              "routeQueryEnhancedMode",
              "transitionStatus",
              "transitionMode",
              "transitionName",
              "watermarkStatus",
              "watermarkMode",
              "watermarkContent",
              "lockStatus",
              "lockMode",
              "lockIdleSeconds",
              "hijackRefresh",
              "colorMode",
              "reducedMotion",
              "backToTopMode"
            ],
            "additionalProperties": false
          },
          "ValueOfAppConstLayoutMode": {
            "type": "string",
            "enum": [
              "left-menu",
              "top-menu"
            ]
          },
          "ValueOfAppConstRouteQueryMode": {
            "type": "string",
            "enum": [
              "normal",
              "enhanced"
            ]
          },
          "ValueOfAppConstRouteQueryEnhancedMode": {
            "type": "string",
            "enum": [
              "base64",
              "cryptojs"
            ]
          },
          "ValueOfAppConstBasicMode": {
            "type": "string",
            "enum": [
              "global",
              "scope"
            ]
          },
          "ValueOfAppConstTransitionName": {
            "type": "string",
            "enum": [
              "fade",
              "fade-down",
              "fade-down-big",
              "fade-left",
              "fade-left-big",
              "fade-right",
              "fade-right-big",
              "fade-up",
              "fade-up-big",
              "fade-topLeft",
              "fade-topRight",
              "fade-bottomLeft",
              "fade-bottomRight",
              "zoom",
              "zoom-down",
              "zoom-left",
              "zoom-right",
              "zoom-up",
              "bounce",
              "bounce-down",
              "bounce-left",
              "bounce-right",
              "bounce-up",
              "rotate",
              "rotate-downLeft",
              "rotate-downRight",
              "rotate-upLeft",
              "rotate-upRight",
              "slide-down",
              "slide-left",
              "slide-right",
              "slide-up",
              "back-down",
              "back-left",
              "back-right",
              "back-up",
              "flip-x",
              "flip-y"
            ]
          },
          "ValueOfAppConstLockMode": {
            "type": "string",
            "enum": [
              "default",
              "security",
              "idle"
            ]
          },
          "ValueOfAppConstColorMode": {
            "type": "string",
            "enum": [
              "default",
              "cafe",
              "contrast",
              "grayscale",
              "grayscale-inverted",
              "inverted"
            ]
          },
          "ValueOfAppConstBackToTopMode": {
            "type": "string",
            "enum": [
              "standalone",
              "builtin"
            ]
          },
          "AppSettingsForTheme": {
            "type": "object",
            "properties": {
              "light": {
                "type": "object",
                "properties": {
                  "primaryColor": {
                    "type": "string"
                  },
                  "infoColor": {
                    "type": "string"
                  },
                  "successColor": {
                    "type": "string"
                  },
                  "warningColor": {
                    "type": "string"
                  },
                  "errorColor": {
                    "type": "string"
                  },
                  "bodyColor": {
                    "type": "string"
                  },
                  "invertedColor": {
                    "type": "string"
                  }
                },
                "required": [
                  "primaryColor",
                  "infoColor",
                  "successColor",
                  "warningColor",
                  "errorColor",
                  "bodyColor",
                  "invertedColor"
                ],
                "additionalProperties": false
              },
              "dark": {
                "type": "object",
                "properties": {
                  "primaryColor": {
                    "type": "string"
                  },
                  "infoColor": {
                    "type": "string"
                  },
                  "successColor": {
                    "type": "string"
                  },
                  "warningColor": {
                    "type": "string"
                  },
                  "errorColor": {
                    "type": "string"
                  },
                  "bodyColor": {
                    "type": "string"
                  },
                  "invertedColor": {
                    "type": "string"
                  }
                },
                "required": [
                  "primaryColor",
                  "infoColor",
                  "successColor",
                  "warningColor",
                  "errorColor",
                  "bodyColor",
                  "invertedColor"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "light",
              "dark"
            ],
            "additionalProperties": false
          },
          "AppSettingsForLogo": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "fixed": {
                "type": "boolean",
                "description": "True => fixed, false => normal"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Logo transition name"
              }
            },
            "required": [
              "id",
              "fixed",
              "status",
              "transition"
            ],
            "additionalProperties": false
          },
          "AppSettingsForHeader": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "fixed": {
                "type": "boolean",
                "description": "True => fixed, false => normal"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Header transition name"
              },
              "inverted": {
                "type": "boolean",
                "description": "Header inverted"
              },
              "height": {
                "type": "number",
                "description": "Header height"
              },
              "fullscreen": {
                "type": "boolean",
                "description": "Header utils - full screen visibility"
              },
              "search": {
                "type": "boolean",
                "description": "Header utils - search visibility"
              }
            },
            "required": [
              "id",
              "fixed",
              "status",
              "transition",
              "inverted",
              "height",
              "fullscreen",
              "search"
            ],
            "additionalProperties": false
          },
          "AppSettingsForTabs": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "fixed": {
                "type": "boolean",
                "description": "True => fixed, false => normal"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "inverted": {
                "type": "boolean",
                "description": "Tabs inverted"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Tabs transition name"
              },
              "height": {
                "type": "number",
                "description": "Tab height"
              },
              "itemWidth": {
                "type": "number",
                "description": "Tab item width"
              },
              "showIcon": {
                "type": "boolean",
                "description": "Tab icon visibility"
              },
              "showUtils": {
                "type": "boolean",
                "description": "Tab aside utils visibility"
              },
              "utilsMode": {
                "$ref": "#/definitions/ValueOfAppConstTabUtilsShowMode",
                "description": "Tab aside utils display mode"
              },
              "contextMenu": {
                "type": "boolean",
                "description": "Tab context menu visibility"
              },
              "sortable": {
                "type": "boolean",
                "description": "Tab sortable"
              },
              "styleMode": {
                "$ref": "#/definitions/ValueOfAppConstTabStyleMode",
                "description": "Tab style mode"
              },
              "persistent": {
                "type": "boolean",
                "description": "With persistent support"
              },
              "itemTransition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Tab item animation name"
              },
              "closeMode": {
                "$ref": "#/definitions/ValueOfAppConstTabCloseMode",
                "description": "Tab close mode"
              },
              "affixMode": {
                "$ref": "#/definitions/ValueOfAppConstTabAffixMode",
                "description": "Tab affix mode"
              }
            },
            "required": [
              "id",
              "fixed",
              "status",
              "inverted",
              "transition",
              "height",
              "itemWidth",
              "showIcon",
              "showUtils",
              "utilsMode",
              "contextMenu",
              "sortable",
              "styleMode",
              "persistent",
              "itemTransition",
              "closeMode",
              "affixMode"
            ],
            "additionalProperties": false
          },
          "ValueOfAppConstTabUtilsShowMode": {
            "type": "string",
            "enum": [
              "always",
              "overflow"
            ]
          },
          "ValueOfAppConstTabStyleMode": {
            "type": "string",
            "enum": [
              "round",
              "flex",
              "card"
            ]
          },
          "ValueOfAppConstTabCloseMode": {
            "type": "string",
            "enum": [
              "always",
              "hover"
            ]
          },
          "ValueOfAppConstTabAffixMode": {
            "type": "string",
            "enum": [
              "icon",
              "pin"
            ]
          },
          "AppSettingsForBreadcrumb": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Breadcrumb transition name"
              },
              "showIcon": {
                "type": "boolean",
                "description": "Breadcrumb icon visibility"
              },
              "showDropdown": {
                "type": "boolean",
                "description": "Breadcrumb dropdown visibility"
              },
              "separator": {
                "type": "string",
                "description": "Breadcrumb custom separator"
              }
            },
            "required": [
              "id",
              "status",
              "transition",
              "showIcon",
              "showDropdown",
              "separator"
            ],
            "additionalProperties": false
          },
          "AppSettingsForMenu": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Menu transition name"
              },
              "inverted": {
                "type": "boolean",
                "description": "Menu inverted color"
              },
              "width": {
                "type": "number",
                "description": "When app layout is `left-menu`, menu width"
              },
              "accordion": {
                "type": "boolean",
                "description": "Menu accordion"
              },
              "iconSize": {
                "type": "number",
                "description": "Menu icon size"
              },
              "indent": {
                "type": "number",
                "description": "Menu indent"
              },
              "collapseStatus": {
                "type": "boolean",
                "description": "Show collapse button"
              },
              "collapsedIconSize": {
                "type": "number",
                "description": "Menu collapsed icon size"
              },
              "collapseMode": {
                "$ref": "#/definitions/ValueOfAppConstCollapseMode",
                "description": "Menu Collapse Mode"
              },
              "collapsedWidth": {
                "type": "number",
                "description": "When app layout is `left-menu`, menu collapsed width"
              }
            },
            "required": [
              "id",
              "status",
              "transition",
              "inverted",
              "width",
              "accordion",
              "iconSize",
              "indent",
              "collapseStatus",
              "collapsedIconSize",
              "collapseMode",
              "collapsedWidth"
            ],
            "additionalProperties": false
          },
          "ValueOfAppConstCollapseMode": {
            "type": "string",
            "enum": [
              "icon",
              "bar",
              "arrow-circle",
              "button"
            ]
          },
          "AppSettingsForFooter": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Dom id"
              },
              "fixed": {
                "type": "boolean",
                "description": "True => fixed, false => normal"
              },
              "status": {
                "type": "boolean",
                "description": "True => using, false => hidden"
              },
              "inverted": {
                "type": "boolean",
                "description": "Footer inverted"
              },
              "transition": {
                "$ref": "#/definitions/ValueOfAppConstTransitionName",
                "description": "Footer transition name"
              },
              "height": {
                "type": "number",
                "description": "Footer height"
              },
              "content": {
                "type": "string",
                "description": "Footer content"
              }
            },
            "required": [
              "id",
              "fixed",
              "status",
              "inverted",
              "transition",
              "height",
              "content"
            ],
            "additionalProperties": false
          }
        }
      }
    }
  ],
  "[dockercompose]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}